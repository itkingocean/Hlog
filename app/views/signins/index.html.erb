<head>
<title>Host Logbook</title>
<meta charset="utf-8">


<meta name="viewport" content="width=device-width, initial-scale=1">
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/css/bootstrap.min.css" integrity="sha384-WskhaSGFgHYWDcbwN70/dfYBj47jz9qbsMId/iRN3ewGhXQFZCSftd1LZCfmhktB" crossorigin="anonymous">

<div class="container text-center">

      <div class="jumbotron" align="center">
      <br>
      <br>
      <h2>Host Logbook<h2/>  
      <h4><%= Time.now.strftime("%m/%d/%Y") %></h4>
       
                      
      </div>
      
      
      
      <%= link_to 'Sign In' , new_signin_path, class: "btn btn-success btn-lg btn-block text-white" %>
      <br>
      <br>
      <div class="container text-center">
      <table class="table table-striped table-bordered">
        <thead class="thead-dark">
          <tr>
            <th>Name</th>
            <th>Company</th>
            <th>Purpose</th>
          </tr>
        </thead>

        <tbody>
          <% @signins.each do |signin| %>
            <tr>
              <td><%= link_to signin.name , edit_signin_path(signin), class: "text-dark"%></td>
              <td><%= signin.company %></td>
              <td><%= signin.purpose %></td>
            </tr>
          <% end %>
        </tbody>
      </table>

</div>
      <p>
      _________________________________________
    
    </p>
</div>

